<!doctype html>

<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<title>@(ViewBag.Title)</title>

	<meta name="author" content="Mr. Dariush Tasdighi" />
	<meta name="description" content="A simple HTML5 Template for new projects." />

	<meta property="og:type" content="website" />
	<meta property="og:image" content="image.png" />
	<meta property="og:title" content="A Basic HTML5 Template" />
	<meta property="og:url" content="https://www.sitepoint.com/a-basic-html5-template/" />
	<meta property="og:description" content="A simple HTML5 Template for new projects." />

	<link rel="icon" href="/favicon.ico" />
	<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
	<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

	<environment include="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.rtl.css" />
		<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
	</environment>

	<environment exclude="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.rtl.min.css" />
		<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
	</environment>

	<link href="~/css/site.css?v=1.0" rel="stylesheet" />

	@RenderSection(name: "StyleSheets", required: false)
</head>

<body>
	<div class="container">
		@(RenderBody())
	</div>

	<environment include="Development">
		<script src="~/lib/bootstrap/js/bootstrap.js"></script>

		<script src="~/lib/jquery/jquery.js"></script>
		<script src="~/lib/jquery-validate/jquery.validate.js"></script>
		<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
	</environment>

	<environment exclude="Development">
		<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

		<script src="~/lib/jquery/jquery.min.js"></script>
		<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
		<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	</environment>

	@RenderSection(name: "Scripts", required: false)
</body>
</html>
